

<h1>Friends List</h1>

<table class="table">
<thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Twitter</th>
    <th colspan="1"></th>
  </tr>
</thead>
<tbody>
<% @friends.each do |friend| %>
  
  <tr>
    <td>
    <%= friend.first_name %></td>
    <td>
    <%= friend.last_name %></td>
    <td>
    <%= friend.email %></td>
    <td>
    <%= friend.phone %></td>
    <td>
    <%= friend.twitter %></td>
    <td><%= link_to "Show this friend", friend , class:"btn btn-outline-info btn-sm" %></td>
    
    
   
    <% end %>

</tbody>
</table>



<%= link_to "New Friend", new_friend_path, class:"btn btn-success" %>
